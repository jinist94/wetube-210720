extends base.pug


block content 
    div 
        video#preview
        button#startBtn Start Recording
    form(method="POST", enctype="multipart/form-data")
        label(for="video") Video Upload
        input(type="file", accept="video/*", name="video", id="video",required)
        input(placeholder="Title", required, type="text", name="title", maxlength=80)
        input(placeholder="Description", required, type="text", name="description", maxlength=20)
        input(placeholder="Hashtags, seperated by comma.", required, type="text", name="hashtags")
        input(type="submit", value="Upload Video")
    
    if errorMessage 
        span=errorMessage
block scripts
    script(src="/static/js/recorder.js")