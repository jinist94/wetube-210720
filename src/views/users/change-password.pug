extends ../base.pug

block content 
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(name="oldPassword", placeholder="Old Password", type="password")
        input(name="newPassword", placeholder="New Password", type="password")
        input(name="newPasswordConfirmation", placeholder="Password Confirmation", type="password")
        input(type="submit", value="Change Password")